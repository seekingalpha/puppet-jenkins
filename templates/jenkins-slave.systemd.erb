[Unit]
Description=Jenkins Slave
Requires=network.target
After=multi-user.target

[Service]
Type=simple
WorkingDirectory=<%= @slave_home %>
EnvironmentFile=-/etc/sysconfig/jenkins-slave
ExecStart=/usr/bin/java -jar <%= @slave_home %>/<%= @client_jar %> -executors <%= @processorcount %> -master <%= @masterurl %> -fsroot <%= @slave_home %> -mode <%= @slave_mode %>
Restart=always
RestartSec=60
StartLimitInterval=0
User=deploy

[Install]
WantedBy=multi-user.target
